<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/landing_page"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/goalgeta_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/signin"
                android:fontFamily="@font/armata"
                android:layout_marginTop="5dp"
                android:textAllCaps="false"
                android:background="@drawable/curved_button_blue"
                android:layout_gravity="right"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <EditText
                    android:id="@+id/edit_username"
                    style="@style/editText"
                    android:background="@drawable/edit_text"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_account_circle_white_24dp"
                    android:fontFamily="@font/armata"
                    android:textColorHint="@color/white"
                    android:hint="@string/user" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <AutoCompleteTextView
                    android:id="@+id/edit_email"
                    style="@style/editText"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:fontFamily="@font/armata"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:hint="EMAIL" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/edit_phoneno"
                    style="@style/editText"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_call_white_24dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/armata"
                    android:textColorHint="@color/white"
                    android:hint="PHONE NO" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/edit_password"
                    style="@style/editText"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_https_white_24dp"
                    android:fontFamily="@font/armata"
                    android:textColorHint="@color/white"
                    android:drawableRight="@drawable/ic_visibility_white_24dp"
                    android:textColor="@color/white"
                    android:hint="@string/password" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/edit_cnfpassword"
                    style="@style/editText"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_https_white_24dp"
                    android:fontFamily="@font/armata"
                    android:drawableRight="@drawable/ic_visibility_white_24dp"
                    android:hint="CONFIRM PASSWORD"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"/>
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <CheckBox
                    android:id="@+id/check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/agree_text"
                    style="@style/text_normal"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="sans-serif"
                    android:text="By Registering with GoalGeta, you agree with our"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/TOC"
                    style="@style/text_normal"
                    android:layout_below="@id/agree_text"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/armata"
                    android:text="Terms Of Service"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <Button
                android:id="@+id/signupReg"
                style="@style/btn"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_background"
                android:fontFamily="@font/armata"
                android:text="@string/signup"
                android:textColor="@color/btn_nd_txt" />

        </LinearLayout>
    </RelativeLayout>

</ScrollView>